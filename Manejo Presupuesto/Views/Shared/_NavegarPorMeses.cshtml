@model DateTime

<h4 class="seleccion-fecha">
    <a asp-route-mes="@ViewBag.mesAnterior" asp-route-anio="@ViewBag.anioAnterior"
       class="btn btn-secondary"><i class="bi-chevron-left"></i></a>
    @Model.ToString("MMM") - @Model.Year
    <a asp-route-mes="@ViewBag.mesPosterior" asp-route-anio="@ViewBag.anioPorterior"
       class="btn btn-secondary"><i class="bi-chevron-right"></i></a>
</h4>

