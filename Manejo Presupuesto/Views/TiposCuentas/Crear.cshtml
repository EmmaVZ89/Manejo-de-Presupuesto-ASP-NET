@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<div class="crear-cuenta">
    <h1>Crear Tipo de Cuenta</h1>
    <h5>El tipo de cuenta se refiere a cómo podemos agrupar cuentas. Ejemplos: Préstamos, tarjetas de crédito, etc.</h5>
</div>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Crear" class="formulario-crear-cuenta">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div style="margin-top: 2rem; text-align: end;">
        <button type="submit" class="btn btn-primary">Crear tipo cuenta</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
