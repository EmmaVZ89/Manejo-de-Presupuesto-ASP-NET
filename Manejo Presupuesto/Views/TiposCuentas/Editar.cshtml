@model TipoCuenta

@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}

<div class="crear-cuenta">
    <h1>Editar Tipo de Cuenta</h1>
</div>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Editar" class="formulario-crear-cuenta">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div style="margin-top: 2rem; text-align: end;">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

