@model Cuenta

@{
    ViewData["Title"] = "Borrar cuenta";
}

<h3 class="mb-3 text-center text-white" style="text-shadow: 1px 1px 1px #000; margin-top: 15%">¿Está seguro desea borrar la cuenta @Model.Nombre?</h3>

<form asp-action="BorrarCuenta" style="text-align:center;">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
